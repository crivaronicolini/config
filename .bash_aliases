#CONFIGS
alias rrc='vim ~/.config/ranger/rc.conf'
alias vimrc='vim ~/_vimrc'
alias i3rc="vim ~/.config/i3/config"

#PROGRAMAS
alias v="vim "
alias calc="python -i ~/bin/uncert.py"
alias r='ranger --choosedir=$HOME/.config/.rangerdir; LASTDIR=`cat $HOME/.config/.rangerdir`; cd "$LASTDIR"'

#BASG
alias rmdir="rm -r"
alias pls='sudo $(fc -ln -1)'

#DOCK
alias dock='bash ~/.config/dock no'
alias dick='bash ~/.config/dock si'
alias deck='bash ~/.config/dock dos'
